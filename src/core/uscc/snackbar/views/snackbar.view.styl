.Snackbar__View
    display: flex
    font-family: Roboto, sans-serif;
    background-color: rgba(0, 0, 0, 0.87);
    padding: 0px 24px
    height: 48px
    line-height: 48px
    border-radius: 2px
    max-width: 568px
    min-width: 288px
    width: auto
    flex-grow: 0
    margin: auto
    margin-left: 25%

.Snackbar__Message
    color: #ffffff
    width: 100%
    text-align: center

.Snackbar__ButtonContainer
    margin-left: auto

.Snackbar__Button
    border: 10px
    -webkit-tap-highlight-color: rgba(0,0,0,0)
    cursor: pointer
    margin: 6px -16px 0px 24px
    padding: 0px
    font-size: inherit
    line-height: 36px
    min-width: 88px
    color: #ff4081
    transition: all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms
    border-radius: 2px
    user-select: none
    background-color: transparent
    outline: none