.account-widget-container
    display: flex
    flex-grow: 1
    flex-direction: column

.account-widget-number-accounts-container
    padding-bottom: 6px
    font-family: Nokia Pure Text Bold
    font-size: 20px
    color: #4D4D4D

.account-widget-number-past-accounts-container
    padding-bottom: 10px
    font-family: Nokia Pure Text Bold
    font-size: 16px
    color: #4D4D4D

.account-widget-past-accounts-container
    overflow: auto

.account-widget-past-item-container
    border-bottom: solid 1px #D4D4D4

.account-widget-past-item-name-container
    font-family: Nokia Pure Text Regular,Arial,sans-serif
    font-size: 14px
    color: rgba(0,0,0,.87)
    padding: 6px
    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis

.account-widget-past-item-date-container
    font-family: Nokia Pure Text Regular,Arial,sans-serif
    font-size: 14px
    color: rgba(0,0,0,.54)
    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis
    margin-left: auto