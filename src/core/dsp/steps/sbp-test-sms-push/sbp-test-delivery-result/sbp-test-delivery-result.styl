.manage-broadcast-detail-table-container {
  display: flex;
  height: 200px;
  flex-wrap: wrap;
  border-style: solid;
  border-width: 1px;
  border-color: black;
}

.manage-broadcast-detail-table-column {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.manage-broadcast-detail-table-rowFlex {
  flex: 1;
  // color: white;
}

.manage-broadcast-detail-table-rowFlex.row-data {
  font-size: 12px;
  border-style: solid;
  border-width: 1px;
  text-align: center;
  border-color: black;
  border-bottom: none; 
  border-left: none;
}
.manage-broadcast-detail-table-rowFlex.content-height-align {
  font-size: 12px;
  border-style: solid;
  border-width: 1px;
  text-align: center;
  border-color: black;
  border-bottom: none; 
  border-left: none;
  height: 3px;
  padding-bottom: 40px
}

.manage-broadcast-detail-table-rowFlex.row-header {
  font-size: 12px;
  text-align: center;
  background-color: #36b336;
  color: #FFFFFF;
  border-style: solid;
  border-color: black;
  border-width: 1px;
  border-top: none; 
  border-left: none;
}

.manage-broadcast-detail-table-rowFlex.row-header.rowspan2 {
  flex: 1;
}
.manage-broadcast-detail-table-rowFlex.row-data.rowspan2 {
  flex: 2;
}

.manage-broadcast-detail-table-rowFlex.row-data.rowspan4 {
  flex: 4;
}